<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment_payments_customer_info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:text="@string/assist_profile_info_header"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/registrationColorHeader2"
        android:fontFamily="sans-serif-light"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/fragment_payments_customer_info_separator_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_header"

        android:layout_marginTop="26dp"

        android:background="@color/defaultBackgroundGray"
        />

    <View
        android:id="@+id/fragment_payments_customer_info_separator_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_top"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:background="@color/defaultBackgroundGray"
    />
    <View
        android:id="@+id/fragment_payments_customer_info_separator_f_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_top"

        android:layout_marginTop="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:background="@color/defaultBackgroundGray"
    />
    <View
        android:id="@+id/fragment_payments_customer_info_separator_email"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_top"

        android:layout_marginTop="180dp"

        android:background="@color/defaultBackgroundGray"
        />
    
    <TextView
        android:id="@+id/fragment_payments_customer_info_separator_name_helper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:text="@string/profile_screen_name_title"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/registrationColorHeader2"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"

        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_separator_name"
        />

    <EditText
        android:id="@+id/fragment_payments_customer_info_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:textAlignment="viewEnd"
        android:gravity="right"
        android:textColor="@color/defaultBlack"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:background="@color/clearColor"

        android:inputType="textPersonName"

        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_top"
        app:layout_constraintLeft_toRightOf="@id/fragment_payments_customer_info_separator_name_helper"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_separator_name"
        />

    <TextView
        android:id="@+id/fragment_payments_customer_info_separator_f_name_helper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:text="@string/profile_screen_family_name_title"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/registrationColorHeader2"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"

        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_separator_f_name"
        />

    <EditText
        android:id="@+id/fragment_payments_customer_info_f_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/clearColor"

        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:textAlignment="viewEnd"
        android:gravity="right"
        android:textColor="@color/defaultBlack"
        android:textSize="16sp"
        android:fontFamily="sans-serif"

        android:inputType="textPersonName"

        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_name"
        app:layout_constraintLeft_toRightOf="@id/fragment_payments_customer_info_separator_f_name_helper"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_separator_f_name"
        />

    <TextView
        android:id="@+id/fragment_payments_customer_info_separator_email_helper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:text="@string/profile_screen_email_title"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/registrationColorHeader2"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"

        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_f_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_separator_email"
        />

    <EditText
        android:id="@+id/fragment_payments_customer_info_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/clearColor"

        android:textAlignment="viewEnd"
        android:gravity="right"
        android:textColor="@color/defaultBlack"
        android:textSize="16sp"
        android:fontFamily="sans-serif"

        android:inputType="textEmailAddress"

        app:layout_constraintTop_toBottomOf="@id/fragment_payments_customer_info_separator_f_name"
        app:layout_constraintLeft_toRightOf="@id/fragment_payments_customer_info_separator_email_helper"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_separator_email"
        />


    <Button
        android:id="@+id/fragment_payments_customer_info_clear_button"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/round_shape_red_btn_with_shadow"

        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:textColor="@color/whiteColor"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"

        android:text="@string/assist_profile_clear_button_title"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/fragment_payments_customer_info_save_button"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/round_shape_green_btn"

        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:textColor="@color/whiteColor"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"

        android:text="@string/assist_profile_save_button_title"

        app:layout_constraintBottom_toTopOf="@id/fragment_payments_customer_info_clear_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>