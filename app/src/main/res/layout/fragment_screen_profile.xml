<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_screen_profile_main">

    <ImageView
        android:id="@+id/fragment_screen_profile_ava_back"
        android:layout_width="match_parent"
        android:layout_height="158dp"

        android:src="@drawable/profile_ava_back"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_screen_profile_avatar_image"
        android:layout_height="100dp"
        android:layout_width="100dp"

        android:src="@drawable/default_user_icon"

        app:layout_constraintCenterX_toCenterX="@id/fragment_screen_profile_ava_back"
        app:layout_constraintCenterY_toCenterY="@id/fragment_screen_profile_ava_back"
        />


    <View
        android:id="@+id/fragment_screen_profile_separator_1"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/defaultBackgroundGray"

        android:layout_marginTop="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_ava_back"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_main"
        />
    <View
        android:id="@+id/fragment_screen_profile_separator_2"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/defaultBackgroundGray"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_separator_1"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_main"
        />
    <View
        android:id="@+id/fragment_screen_profile_separator_3"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/defaultBackgroundGray"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_separator_2"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_main"
        />
    <View
        android:id="@+id/fragment_screen_profile_separator_4"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/defaultBackgroundGray"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_separator_3"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_main"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/profile_screen_header"

        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:textColor="@color/defaultBlack"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_ava_back"
        app:layout_constraintCenterX_toCenterX="@id/fragment_screen_profile_ava_back"
        app:layout_constraintBottom_toTopOf="@id/fragment_screen_profile_separator_1"
        />

    <TextView
        android:id="@+id/profile_screen_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/profile_screen_name_title"

        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textColor="@color/registrationColorHeader2"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_separator_1"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_separator_1"
        app:layout_constraintBottom_toTopOf="@id/fragment_screen_profile_separator_2"
        />
    <TextView
        android:id="@+id/profile_screen_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/profile_screen_email_title"

        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textColor="@color/registrationColorHeader2"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_separator_2"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_separator_2"
        app:layout_constraintBottom_toTopOf="@id/fragment_screen_profile_separator_3"
        />
    <TextView
        android:id="@+id/profile_screen_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/profile_screen_phone_title"

        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:textColor="@color/registrationColorHeader2"

        app:layout_constraintTop_toBottomOf="@id/fragment_screen_profile_separator_3"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_separator_3"
        app:layout_constraintBottom_toTopOf="@id/fragment_screen_profile_separator_4"
        />

    <EditText
        android:id="@+id/profile_screen_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="textEnd"
        android:gravity="end"


        android:lines="1"
        android:maxLength="30"

        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/defaultBlack"
        android:background="@color/clearColor"

        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_separator_1"
        app:layout_constraintCenterY_toCenterY="@id/profile_screen_name_title"
        app:layout_constraintLeft_toLeftOf="@id/profile_screen_name_title"
        />
    <EditText
        android:id="@+id/profile_screen_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="textEnd"
        android:gravity="end"


        android:lines="1"
        android:maxLength="30"

        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/defaultBlack"
        android:background="@color/clearColor"

        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_separator_1"
        app:layout_constraintCenterY_toCenterY="@id/profile_screen_email_title"
        app:layout_constraintLeft_toLeftOf="@id/profile_screen_email_title"
        />
    <TextView
        android:id="@+id/profile_screen_phone_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:gravity="end"


        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/registrationColorHeader2"

        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_separator_1"
        app:layout_constraintCenterY_toCenterY="@id/profile_screen_phone_title"
        app:layout_constraintLeft_toLeftOf="@id/profile_screen_phone_title"
        />


    <Button
        android:id="@+id/fragment_screen_profile_pick_ava_btn"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clearColor"

        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_ava_back"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_ava_back"
        app:layout_constraintTop_toTopOf="@id/fragment_screen_profile_ava_back"
        app:layout_constraintBottom_toBottomOf="@id/fragment_screen_profile_ava_back"
        />

    <Button
        android:id="@+id/fragment_screen_profile_choose_avatar_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:background="@color/clearColor"


        app:layout_constraintCenterX_toCenterX="@id/fragment_screen_profile_ava_back"
        app:layout_constraintCenterY_toCenterY="@id/fragment_screen_profile_ava_back"
        />

    <Button
        android:id="@+id/fragment_screen_profile_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:textColor="@color/defaultWhite"

        android:background="@drawable/round_shape_blue_btn"
        android:text="@string/profile_screen_upload_data"

        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        app:layout_constraintBottom_toBottomOf="@id/fragment_screen_profile_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_main"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_main"
        />

    <ProgressBar
        android:id="@+id/fragment_screen_profile_upload_btn_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"

        app:layout_constraintBottom_toBottomOf="@id/fragment_screen_profile_upload_btn"
        app:layout_constraintLeft_toLeftOf="@id/fragment_screen_profile_upload_btn"
        app:layout_constraintRight_toRightOf="@id/fragment_screen_profile_upload_btn"
        />


</android.support.constraint.ConstraintLayout>