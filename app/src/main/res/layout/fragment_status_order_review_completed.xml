<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/fragment_status_order_review_completed"
    >
    <ImageView
        android:id="@+id/fragment_status_order_review_completed_fade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/statusesBackWithAlpha"
        android:clickable="true"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_status_order_review_completed_main"

        android:layout_width="match_parent"
        android:layout_height="248dp"

        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:background="@drawable/default_status_back"
        app:layout_constraintBottom_toBottomOf="@id/fragment_status_order_review_completed"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_review_completed"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_review_completed"
        >

        <View
            android:id="@+id/fragment_status_order_review_completed_top_separator"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/defaultBackgroundGray"

            android:layout_marginTop="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"


            app:layout_constraintTop_toTopOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_order_review_completed_main"
            />

        <TextView
            android:id="@+id/fragment_status_order_review_completed_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="@string/status_order_review_completed_title"
            android:textColor="@color/defaultBlack"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintTop_toTopOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintBottom_toBottomOf="@id/fragment_status_order_review_completed_top_separator"
            />

        <TextView
            android:id="@+id/fragment_status_order_review_completed_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="@string/status_order_review_completed_header"
            android:textColor="@color/defaultBlack"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"

            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_status_order_review_completed_top_separator"
            />
        <TextView
            android:id="@+id/fragment_status_order_review_completed_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="@string/status_order_review_completed_text"
            android:textColor="@color/registrationColorHeader2"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"

            android:layout_marginTop="11dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_status_order_review_completed_header_text_view"
            />

        <Button
            android:id="@+id/fragment_status_order_review_completed_button"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:textColor="@color/defaultWhite"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textAlignment="center"

            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"

            android:text="@string/back_to_map_btn_title"

            android:background="@drawable/round_shape_green_btn"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_order_review_completed_main"
            app:layout_constraintBottom_toBottomOf="@id/fragment_status_order_review_completed_main"

            />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>