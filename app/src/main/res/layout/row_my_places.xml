<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/row_my_places_view_pager">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/row_my_places_main">

            <TextView
                android:id="@+id/row_my_places_title_text_view"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:textColor="@color/defaultBlack"
                android:fontFamily="sans-serif"

                android:lines="1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="9dp"

                app:layout_constraintLeft_toLeftOf="@id/row_my_places_main"
                app:layout_constraintTop_toTopOf="@id/row_my_places_main"
                app:layout_constraintRight_toRightOf="@id/row_my_places_main"
                />

            <TextView
                android:id="@+id/row_my_places_subtitle_text_view"

                android:textSize="14sp"
                android:textColor="@color/approximatePriceTextColor"
                android:fontFamily="sans-serif"

                android:lines="1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="32dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="@id/row_my_places_main"
                app:layout_constraintLeft_toLeftOf="@id/row_my_places_main"
                app:layout_constraintRight_toRightOf="@id/row_my_places_main"
                />

            <ImageView
                android:id="@+id/row_my_places_arrow"

                android:layout_width="7dp"
                android:layout_height="12dp"

                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"

                android:src="@drawable/my_places_right_arrow"

                app:layout_constraintRight_toRightOf="@id/row_my_places_main"
                app:layout_constraintCenterY_toCenterY="@id/row_my_places_main"
                />

            <Button
                android:id="@+id/row_my_places_select_place_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/clearColor"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/row_my_places_second"
            android:background="@color/defaultBackgroundGray"
            >


            <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/row_my_places_right_button"
                android:background="@color/clearColor"

                app:layout_constraintRight_toRightOf="@id/row_my_places_second"
                app:layout_constraintTop_toTopOf="@id/row_my_places_second"
                app:layout_constraintBottom_toBottomOf="@id/row_my_places_second"
                />

            <Button
                android:layout_width="70dp"
                android:layout_height="match_parent"

                android:id="@+id/row_my_places_left_button"

                android:background="@color/clearColor"

                app:layout_constraintRight_toLeftOf="@id/row_my_places_right_button"
                app:layout_constraintTop_toTopOf="@id/row_my_places_second"
                app:layout_constraintBottom_toBottomOf="@id/row_my_places_second"
                />

            <ImageView
                android:id="@+id/row_my_places_left_button_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"

                app:layout_constraintCenterX_toCenterX="@id/row_my_places_left_button"
                app:layout_constraintCenterY_toCenterY="@id/row_my_places_left_button"
                />


            <ImageView
                android:id="@+id/row_my_places_right_button_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"

                app:layout_constraintCenterX_toCenterX="@id/row_my_places_right_button"
                app:layout_constraintCenterY_toCenterY="@id/row_my_places_right_button" />

            </android.support.constraint.ConstraintLayout>
    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>