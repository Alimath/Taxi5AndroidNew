<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/row_payment_cards_card_back_image"
        android:layout_width="348dp"
        android:layout_height="300dp"
        android:src="@drawable/card_back"

        android:layout_marginTop="16dp"
        android:scaleType="fitStart"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCenterX_toCenterX="parent"

        />

    <TextView
        android:id="@+id/row_payment_cards_card_number_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/whiteColor"
        android:textAlignment="center"

        android:layout_marginTop="81dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"

        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_image"
        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_image"
        />
    <TextView
        android:id="@+id/row_payment_cards_card_number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:text="****"
        android:textColor="@color/whiteColor"
        android:textAlignment="center"

        android:layout_marginTop="81dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"

        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_image"
        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_image"
        />

    <TextView
        android:id="@+id/row_payment_cards_card_number_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:text="****"
        android:textColor="@color/whiteColor"
        android:textAlignment="viewEnd"

        android:layout_marginTop="81dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"

        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_image"
        app:layout_constraintRight_toRightOf="@id/row_payment_cards_card_back_image"
        />

    <TextView
        android:id="@+id/row_payment_cards_card_number_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/whiteColor"
        android:textAlignment="viewEnd"

        android:layout_marginTop="81dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"

        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_image"
        app:layout_constraintRight_toRightOf="@id/row_payment_cards_card_back_image"
        />

    <TextView
        android:id="@+id/row_payment_cards_card_exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/whiteColor"
        android:textAlignment="viewEnd"

        android:layout_marginTop="130dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"

        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_image"
        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_image"
        />

    <TextView
        android:id="@+id/row_payment_cards_card_holder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/whiteColor"
        android:textAlignment="viewEnd"

        android:layout_marginTop="156dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"

        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_image"
        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_image"
        />

    <ImageView
        android:id="@+id/row_payment_cards_card_back_error_image"

        android:layout_width="328dp"
        android:layout_height="200dp"

        android:src="@drawable/card_back_error"
        android:scaleType="fitStart"

        android:visibility="invisible"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCenterX_toCenterX="parent"
        />

    <TextView
        android:id="@+id/row_payment_cards_card_back_error_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:textColor="@color/defaultBlack"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:gravity="center"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:visibility="invisible"

        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_error_image"
        app:layout_constraintRight_toRightOf="@id/row_payment_cards_card_back_error_image"
        app:layout_constraintCenterY_toCenterY="@id/row_payment_cards_card_back_error_image"
        />


    <ImageView
        android:id="@+id/row_payment_cards_card_back_one_click_image"

        android:layout_width="348dp"
        android:layout_height="300dp"
        android:src="@drawable/card_back_one_click"

        android:layout_marginTop="16dp"
        android:scaleType="fitStart"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCenterX_toCenterX="parent"
        />
    <TextView
        android:id="@+id/row_payment_cards_one_click_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"

        android:text="@string/payments_card_remove_card_one_click_title"
        android:textColor="@color/defaultWhite"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"

        android:layout_marginTop="81dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"

        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_one_click_image"
        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_one_click_image"
        />
    <TextView
        android:id="@+id/row_payment_cards_one_click_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"

        android:text="@string/payments_card_remove_card_one_click_title"
        android:textColor="@color/defaultWhite"
        android:fontFamily="sans-serif"
        android:textSize="12sp"

        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"

        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_card_back_one_click_image"
        app:layout_constraintTop_toBottomOf="@id/row_payment_cards_one_click_title"
        />


    <ImageView
        android:id="@+id/row_payment_cards_remove_card_icon"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/remove_card_icon"

        app:layout_constraintRight_toRightOf="@id/row_payment_cards_card_back_error_image"
        app:layout_constraintTop_toTopOf="@id/row_payment_cards_card_back_error_image"

        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/row_payment_cards_remove_card_button"

        android:layout_width="40dp"
        android:layout_height="40dp"

        android:background="@color/clearColor"

        app:layout_constraintLeft_toLeftOf="@id/row_payment_cards_remove_card_icon"
        app:layout_constraintRight_toRightOf="@id/row_payment_cards_remove_card_icon"
        app:layout_constraintTop_toTopOf="@id/row_payment_cards_remove_card_icon"
        app:layout_constraintBottom_toBottomOf="@id/row_payment_cards_remove_card_icon"
        />

</android.support.constraint.ConstraintLayout>