<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_about_us_main">

        <ImageView
            android:id="@+id/fragment_about_us_logo"

            android:layout_width="200dp"
            android:layout_height="36dp"

            android:src="@drawable/splashlogo"

            android:layout_marginTop="40dp"

            app:layout_constraintTop_toTopOf="@id/fragment_about_us_main"
            app:layout_constraintCenterX_toCenterX="@id/fragment_about_us_main"
            />

        <TextView
            android:id="@+id/fragment_about_us_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:textAlignment="center"

            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/defaultBlack"
            android:text="@string/about_us_title"

            android:layout_marginTop="30dp"

            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_logo"
            app:layout_constraintLeft_toLeftOf="@id/fragment_about_us_main"
            app:layout_constraintRight_toRightOf="@id/fragment_about_us_main"
            />
        
        <TextView
            android:id="@+id/fragment_about_us_text"


            android:gravity="center"
            android:textAlignment="center"

            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:textColor="@color/registrationColorHeader2"
            android:text="@string/about_us_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="17dp"

            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_title"
            app:layout_constraintLeft_toLeftOf="@id/fragment_about_us_main"
            app:layout_constraintRight_toRightOf="@id/fragment_about_us_main"
            />

        <View
            android:id="@+id/fragment_about_us_separator_1"

            android:layout_width="wrap_content"
            android:layout_height="1dp"

            android:background="@color/defaultBackgroundGray"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="38dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_about_us_main"
            app:layout_constraintRight_toRightOf="@id/fragment_about_us_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_text"
            />

        <Button
            android:id="@+id/fragment_about_us_review_button"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@drawable/round_shape_yellow_btn"

            android:textSize="16sp"
            android:textColor="@color/defaultBlack"
            android:fontFamily="sans-serif"
            android:text="@string/about_us_review_button_text"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_about_us_main"
            app:layout_constraintRight_toRightOf="@id/fragment_about_us_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_separator_1"
            />

        <View
            android:id="@+id/fragment_about_us_separator_2"

            android:layout_width="wrap_content"
            android:layout_height="1dp"

            android:background="@color/defaultBackgroundGray"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_about_us_main"
            app:layout_constraintRight_toRightOf="@id/fragment_about_us_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_review_button"
            />
        
        <LinearLayout
            android:id="@+id/fragment_about_us_soc_icons"

            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="25dp"

            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_separator_2"
            >
            
            <Button
                android:id="@+id/fragment_about_us_fb_button"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/fb_icon"
                android:elevation="0dp" />
            <Button
                android:id="@+id/fragment_about_us_tw_button"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/tw_icon"
                />
            <Button
                android:id="@+id/fragment_about_us_instagram_button"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/instagram_icon"
                />
            <Button
                android:id="@+id/fragment_about_vk_button"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/vk_icon"
                />
            <Button
                android:id="@+id/fragment_about_us_youtube_button"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/youtube_icon"
                />

        </LinearLayout>

        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/fragment_about_us_separator_2"
            android:src="@drawable/left_drawer_bottom_cubics"
            />

    </android.support.constraint.ConstraintLayout>



</ScrollView>