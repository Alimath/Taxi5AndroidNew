<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_active_order_main">


    <TextView
        android:id="@+id/row_active_order_status_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"


        app:layout_constraintRight_toRightOf="@id/row_active_order_main"
        app:layout_constraintTop_toTopOf="@id/row_active_order_main"
        />

    <EditText
        android:id="@+id/row_active_order_from_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="text"
        android:maxLines="1"
        android:background="@color/clearColor"
        android:clickable="false"
        android:focusable="false"

        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:textColor="@color/defaultBlack"
        android:fontFamily="sans-serif"
        android:textSize="14sp"

        app:layout_constraintTop_toTopOf="@id/row_active_order_main"
        app:layout_constraintLeft_toLeftOf="@id/row_active_order_main"
        app:layout_constraintRight_toLeftOf="@id/row_active_order_status_text_view"
        />

    <TextView
        android:id="@+id/row_active_order_to_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"

        android:textColor="@color/approximatePriceTextColor"
        android:fontFamily="sans-serif"
        android:textSize="14sp"

        app:layout_constraintTop_toBottomOf="@id/row_active_order_from_text_view"
        app:layout_constraintLeft_toLeftOf="@id/row_active_order_main"
        app:layout_constraintRight_toLeftOf="@id/row_active_order_status_text_view"
        />

    <ImageView
        android:id="@+id/row_active_order_to_arrow"

        android:layout_width="10dp"
        android:layout_height="10dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:src="@drawable/right_menu_to_arrow"

        app:layout_constraintLeft_toLeftOf="@id/row_active_order_main"
        app:layout_constraintCenterY_toCenterY="@id/row_active_order_to_text_view"
        />

    <ImageView
        android:id="@+id/row_active_order_select_order_arrow"
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:src="@drawable/right_menu_select_order_arrow"

        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintRight_toRightOf="@id/row_active_order_main"
        app:layout_constraintCenterY_toCenterY="@id/row_active_order_main"
        />


</android.support.constraint.ConstraintLayout>