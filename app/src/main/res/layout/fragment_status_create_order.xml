<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/fragment_status_create_order_main_no_animated"
    >
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/fragment_status_create_order_main"
        >





        <android.support.constraint.ConstraintLayout
            android:id="@+id/fragment_status_create_order_options"

            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/default_status_back"

            android:visibility="invisible"

            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"

            app:layout_constraintLeft_toLeftOf="@+id/fragment_status_create_order_main"
            app:layout_constraintRight_toRightOf="@+id/fragment_status_create_order_main"

            app:layout_constraintBottom_toTopOf="@+id/fragment_status_create_order_comment_view"

            android:clickable="true">

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_status_create_order_options_guideline_1"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_options"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_status_create_order_options_guideline_2"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_options"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/defaultBackgroundGray"

                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"

                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options_guideline_1"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/defaultBackgroundGray"

                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"

                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options_guideline_2"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_status_create_order_options_guideline_center_baby"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.165"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_options"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />
            <android.support.constraint.Guideline
                android:id="@+id/fragment_status_create_order_options_guideline_center_baggage"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_options"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />
            <android.support.constraint.Guideline
                android:id="@+id/fragment_status_create_order_options_guideline_center_animal"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8333"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_options"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_options"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_options"
                />

            <ImageView
                android:id="@+id/fragment_status_create_order_options_baby_icon"

                android:layout_width="20dp"
                android:layout_height="20dp"

                android:src="@drawable/order_options_baby_icon"

                android:layout_marginTop="27dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_options_guideline_center_baby"
                />
            <ImageView
                android:id="@+id/fragment_status_create_order_options_baggage_icon"

                android:layout_width="20dp"
                android:layout_height="19dp"

                android:src="@drawable/order_options_baggage_icon"

                android:layout_marginTop="27dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_options_guideline_center_baggage"
                />
            <ImageView
                android:id="@+id/fragment_status_create_order_options_animal_icon"

                android:layout_width="16dp"
                android:layout_height="18dp"

                android:src="@drawable/order_options_animal_icon"

                android:layout_marginTop="27dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_options_guideline_center_animal"
                />

            <TextView
                android:id="@+id/fragment_status_create_order_options_baby_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/status_create_order_options_baby_title"

                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/approximatePriceTextColor"

                android:gravity="center"
                android:textAlignment="center"

                android:layout_marginTop="57dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_options_guideline_center_baby"
                />
            <TextView
                android:id="@+id/fragment_status_create_order_options_baggage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/status_create_order_options_baggage_title"

                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/approximatePriceTextColor"

                android:gravity="center"
                android:textAlignment="center"

                android:layout_marginTop="57dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_options_guideline_center_baggage"
                />
            <TextView
                android:id="@+id/fragment_status_create_order_options_animal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/status_create_order_options_animal_title"

                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="@color/approximatePriceTextColor"

                android:gravity="center"
                android:textAlignment="center"

                android:layout_marginTop="57dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_options_guideline_center_animal"
                />

            <Button
                android:id="@+id/fragment_status_create_order_options_baby_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/clearColor"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/fragment_status_create_order_options_guideline_1"
                />
            <Button
                android:id="@+id/fragment_status_create_order_options_baggage_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/clearColor"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options_guideline_1"
                app:layout_constraintRight_toLeftOf="@id/fragment_status_create_order_options_guideline_2"
                />
            <Button
                android:id="@+id/fragment_status_create_order_options_animal_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/clearColor"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_options_guideline_2"
                app:layout_constraintRight_toRightOf="parent"
                />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout

            android:id="@+id/fragment_status_create_order_from_to_view"
            android:visibility="visible"

            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/default_status_back"


            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"

            app:layout_constraintLeft_toLeftOf="@+id/fragment_status_create_order_main"
            app:layout_constraintRight_toRightOf="@+id/fragment_status_create_order_main"

            app:layout_constraintBottom_toTopOf="@+id/fragment_status_create_order_comment_view"

            android:clickable="true"

            >

            <View
                android:id="@+id/fragment_status_create_order_from_to_view_separator_center"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/defaultBackgroundGray"

                android:layout_marginLeft="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp"

                app:layout_constraintLeft_toLeftOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintRight_toRightOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintCenterY_toCenterY="@+id/fragment_status_create_order_from_to_view"/>

            <View
                android:id="@+id/fragment_status_create_order_from_to_view_separator_top_right"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/defaultBackgroundGray"

                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"

                app:layout_constraintTop_toTopOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintBottom_toTopOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_from_to_view"/>

            <View
                android:id="@+id/fragment_status_create_order_from_to_view_separator_bottom_right"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/defaultBackgroundGray"

                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"

                app:layout_constraintTop_toTopOf="@+id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_from_to_view"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_from_to_view"/>


            <ImageView
                android:id="@+id/fragment_status_create_order_from_to_view_search_to_address_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"

                app:srcCompat="@drawable/status_icon_find"
                android:scaleType="fitXY"

                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"

                app:layout_constraintRight_toRightOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintTop_toTopOf="@+id/fragment_status_create_order_from_to_view"/>

            <ImageView
                android:id="@+id/fragment_status_create_order_from_to_view_search_to_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"

                app:srcCompat="@drawable/status_icon_find"
                android:scaleType="fitXY"

                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="22dp"

                app:layout_constraintRight_toRightOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_status_create_order_from_to_view"/>

            <ImageView
                android:id="@+id/fragment_status_create_order_from_to_view_from_icon"
                android:layout_width="11dp"
                android:layout_height="16dp"

                app:srcCompat="@drawable/status_icon_from"
                android:scaleType="fitXY"

                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"

                app:layout_constraintLeft_toLeftOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintTop_toTopOf="@+id/fragment_status_create_order_from_to_view"/>

            <ImageView
                android:id="@+id/fragment_status_create_order_from_to_view_to_icon"
                android:layout_width="11dp"
                android:layout_height="16dp"

                app:srcCompat="@drawable/status_icon_to"
                android:scaleType="fitXY"

                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="22dp"

                app:layout_constraintLeft_toLeftOf="@+id/fragment_status_create_order_from_to_view"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_status_create_order_from_to_view"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"

                android:background="@color/defaultBackgroundGray"

                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"

                app:layout_constraintTop_toBottomOf="@+id/fragment_status_create_order_from_to_view_from_icon"
                app:layout_constraintBottom_toTopOf="@id/fragment_status_create_order_from_to_view_to_icon"
                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_from_to_view_to_icon"

                />

            <TextView
                android:id="@+id/fragment_status_create_order_from_to_view_from_help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/approximatePriceTextColor"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="@string/status_create_order_from_text"

                android:layout_marginTop="8dp"

                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_from_to_view_separator_center"
                />

            <EditText
                android:id="@+id/fragment_status_create_order_from_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:maxLines="1"


                android:background="@color/clearColor"

                android:clickable="false"
                android:focusable="false"

                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"

                android:textColor="@color/defaultBlack"
                android:fontFamily="sans-serif"
                android:textSize="16sp"

                app:layout_constraintTop_toBottomOf="@id/fragment_status_create_order_from_to_view_from_help_text"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_from_to_view_separator_top_right"
                />



            <TextView
                android:id="@+id/fragment_status_create_order_from_to_view_to_help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/approximatePriceTextColor"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:text="@string/status_create_order_to_text"

                android:layout_marginTop="8dp"

                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_from_to_view_separator_center"
                />

            <EditText
                android:id="@+id/fragment_status_create_order_to_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"
                android:maxLines="1"

                android:background="@color/clearColor"

                android:clickable="false"
                android:focusable="false"

                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"

                android:textColor="@color/defaultBlack"
                android:fontFamily="sans-serif"
                android:textSize="16sp"


                app:layout_constraintTop_toBottomOf="@id/fragment_status_create_order_from_to_view_to_help_text"
                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_from_to_view_separator_top_right"/>



            <Button
                android:id="@+id/fragment_status_create_order_from_to_view_search_from_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/clearColor"

                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_from_to_view_separator_top_right"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_from_to_view"
                />

            <Button
                android:id="@+id/fragment_status_create_order_from_to_view_search_to_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/clearColor"

                app:layout_constraintLeft_toLeftOf="@id/fragment_status_create_order_from_to_view_separator_top_right"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_from_to_view"
                app:layout_constraintRight_toRightOf="@id/fragment_status_create_order_from_to_view"
                />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/fragment_status_create_order_from_to_view_progress_bar_2"
                android:layout_width="20dp"
                android:layout_height="20dp"

                app:indicatorName="BallSpinFadeLoaderIndicator"

                style="@style/AVLoadingIndicatorView"
                app:indicatorColor="@color/hintsColor"
                android:visibility="visible"


                app:layout_constraintCenterX_toCenterX="@id/fragment_status_create_order_from_to_view_search_to_address"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_from_to_view_separator_center"
                />

            <Button
                android:id="@+id/fragment_status_create_order_from_to_view_search_to_address_full"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/clearColor"
                app:layout_constraintRight_toLeftOf="@id/fragment_status_create_order_from_to_view_search_to_address"
                app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view_separator_center"
                app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_from_to_view"
                />
            <Button
            android:id="@+id/fragment_status_create_order_from_to_view_search_from_address_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/clearColor"
            app:layout_constraintRight_toLeftOf="@id/fragment_status_create_order_from_to_view_search_to_address"
            app:layout_constraintTop_toTopOf="@id/fragment_status_create_order_from_to_view"
            app:layout_constraintBottom_toBottomOf="@id/fragment_status_create_order_from_to_view_separator_center"
            />

        </android.support.constraint.ConstraintLayout>



