<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_my_places_main"
    android:background="@color/whiteColor">

    <View
        android:id="@+id/fragment_my_places_top_separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:background="@color/defaultBackgroundGray"

        app:layout_constraintTop_toTopOf="@id/fragment_my_places_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_my_places_main"
        app:layout_constraintRight_toRightOf="@id/fragment_my_places_main"
        />

    <ListView
        android:id="@+id/fragment_my_places_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:dividerHeight="1dp"
        android:divider="@drawable/default_divider"

        app:layout_constraintTop_toBottomOf="@id/fragment_my_places_top_separator"
        app:layout_constraintLeft_toLeftOf="@id/fragment_my_places_main"
        app:layout_constraintRight_toRightOf="@id/fragment_my_places_main"
        app:layout_constraintBottom_toBottomOf="@id/fragment_my_places_main"
        >



    </ListView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_my_places_loading_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaultBackgroundGray"
        android:elevation="10dp"
        android:alpha="0.7"
        android:clickable="true"
        android:visibility="invisible"
        >



        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/fragment_my_places_loading_progress_indicator"
            android:layout_width="60dp"
            android:layout_height="60dp"

            app:indicatorColor="@color/defaultBlack"
            app:indicatorName="BallSpinFadeLoaderIndicator"

            android:layout_marginBottom="70dp"

            app:layout_constraintCenterX_toCenterX="parent"
            app:layout_constraintCenterY_toCenterY="parent"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>