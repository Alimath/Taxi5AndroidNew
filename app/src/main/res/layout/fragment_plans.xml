<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_plans_main">

        <View
            android:id="@+id/fragment_plans_center_item"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintCenterX_toCenterX="@id/fragment_plans_main"
            />

        <View
            android:id="@+id/fragment_plans_buttons_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_with_shadow_white"

            app:layout_constraintTop_toTopOf="@id/fragment_plans_main"
            app:layout_constraintLeft_toLeftOf="@id/fragment_plans_main"
            app:layout_constraintRight_toRightOf="@id/fragment_plans_main"
            />

        <Button
            android:id="@+id/fragment_plans_button_byn"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/clearColor"

            android:text="@string/new_currency"
            android:textColor="@color/defaultBlue"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"

            app:layout_constraintLeft_toLeftOf="@id/fragment_plans_main"
            app:layout_constraintRight_toLeftOf="@id/fragment_plans_center_item"

            />

        <Button
            android:id="@+id/fragment_plans_button_byr"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/clearColor"

            android:text="@string/old_currency"
            android:textColor="@color/defaultBlack"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"

            app:layout_constraintLeft_toLeftOf="@id/fragment_plans_center_item"
            app:layout_constraintRight_toRightOf="@id/fragment_plans_main"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/fragment_plans_buttons_divider"

            android:background="@color/defaultBlue"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragment_plans_button_byr"
            />
    </android.support.constraint.ConstraintLayout>


    <ListView
        android:id="@+id/fragment_plans_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="1dp"
        android:divider="@drawable/default_divider"
        >
    </ListView>
</LinearLayout>
