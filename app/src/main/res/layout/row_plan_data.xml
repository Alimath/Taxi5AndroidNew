<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_plan_data_main"
    >

    <View
        android:id="@+id/row_plan_data_icon_center_item"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/clearColor"
        />

    <View
        android:id="@+id/row_plan_data_meta_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="64dp"

        android:background="@color/defaultBackgroundGray"

        app:layout_constraintTop_toTopOf="@id/row_plan_data_main"
        app:layout_constraintLeft_toLeftOf="@id/row_plan_data_main"
        app:layout_constraintRight_toRightOf="@id/row_plan_data_main"
        />


    <ImageView
        android:id="@+id/row_plan_data_icon_image"
        android:layout_width="22dp"
        android:layout_height="20dp"

        android:scaleType="fitCenter"

        app:layout_constraintCenterX_toCenterX="@id/row_plan_data_icon_center_item"
        app:layout_constraintTop_toTopOf="@id/row_plan_data_main"
        app:layout_constraintBottom_toTopOf="@id/row_plan_data_meta_separator"
        />

    <TextView
        android:id="@+id/row_plan_data_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"

        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/defaultBlack"

        app:layout_constraintTop_toTopOf="@id/row_plan_data_main"
        app:layout_constraintLeft_toLeftOf="@id/row_plan_data_main"
        app:layout_constraintBottom_toTopOf="@id/row_plan_data_meta_separator"

        />

    <TextView
        android:id="@+id/row_plan_data_currency_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"

        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:textColor="@color/registrationColorHeader2"

        app:layout_constraintTop_toTopOf="@id/row_plan_data_main"
        app:layout_constraintRight_toRightOf="@id/row_plan_data_main"
        app:layout_constraintBottom_toTopOf="@id/row_plan_data_meta_separator"
        />

    <TextView
        android:id="@+id/row_plan_data_amount_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"

        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textColor="@color/defaultBlack"

        app:layout_constraintTop_toTopOf="@id/row_plan_data_main"
        app:layout_constraintRight_toRightOf="@id/row_plan_data_main"
        app:layout_constraintBottom_toTopOf="@id/row_plan_data_meta_separator"/>

    <TextView
        android:id="@+id/row_plan_data_meta_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="14sp"
        android:textColor="@color/registrationColorHeader2"
        android:fontFamily="sans-serif-light"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="11dp"
        android:paddingBottom="25dp"

        app:layout_constraintTop_toBottomOf="@id/row_plan_data_meta_separator"
        app:layout_constraintLeft_toLeftOf="@id/row_plan_data_main"
        app:layout_constraintRight_toRightOf="@id/row_plan_data_main"
        />

</android.support.constraint.ConstraintLayout>