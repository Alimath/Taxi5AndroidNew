<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/fragment_status_information"
    >
    <ImageView
        android:id="@+id/fragment_status_information_fade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/statusesBackWithAlpha"
        android:clickable="true"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_status_information_main"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:background="@drawable/default_status_back"
        app:layout_constraintBottom_toBottomOf="@id/fragment_status_information"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_information"
        app:layout_constraintRight_toRightOf="@id/fragment_status_information"
        >
        
        <View
            android:id="@+id/fragment_status_information_top_separator"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/defaultBackgroundGray"

            android:layout_marginTop="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"


            app:layout_constraintTop_toTopOf="@id/fragment_status_information_main"
            app:layout_constraintLeft_toLeftOf="@id/fragment_status_information_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_information_main"
            />

        <TextView
            android:id="@+id/fragment_status_information_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="@string/status_information_title"
            android:textColor="@color/defaultBlack"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_information_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_information_main"
            app:layout_constraintTop_toTopOf="@id/fragment_status_information_main"
            app:layout_constraintBottom_toBottomOf="@id/fragment_status_information_top_separator"
            />

        <TextView
            android:id="@+id/fragment_status_information_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="@string/status_information_no_cars_header"
            android:textColor="@color/defaultBlack"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"

            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_information_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_information_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_status_information_top_separator"
            />
        <TextView
            android:id="@+id/fragment_status_information_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="@string/status_information_try_to_repeat_order"
            android:textColor="@color/registrationColorHeader2"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"

            android:layout_marginTop="11dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            app:layout_constraintLeft_toLeftOf="@id/fragment_status_information_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_information_main"
            app:layout_constraintTop_toBottomOf="@id/fragment_status_information_header_text_view"
            />

        <Button
            android:id="@+id/fragment_status_information_button"

            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:textColor="@color/defaultWhite"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textAlignment="center"

            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"

            android:text="@string/status_information_repeat_order_button_text"

            android:background="@drawable/round_shape_blue_btn"

            app:layout_constraintTop_toBottomOf="@id/fragment_status_information_message_text_view"
            app:layout_constraintLeft_toLeftOf="@id/fragment_status_information_main"
            app:layout_constraintRight_toRightOf="@id/fragment_status_information_main"
            app:layout_constraintBottom_toBottomOf="@id/fragment_status_information_main"

            />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/fragment_status_information_button_progress_bar"
            android:layout_width="40dp"
            android:layout_height="35dp"

            android:elevation="30dp"
            app:indicatorName="BallPulseIndicator"
            style="@style/AVLoadingIndicatorView"
            app:indicatorColor="@color/whiteColor"

            app:layout_constraintCenterY_toCenterY="@id/fragment_status_information_button"
            app:layout_constraintCenterX_toCenterX="@id/fragment_status_information_button"
            />


        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>