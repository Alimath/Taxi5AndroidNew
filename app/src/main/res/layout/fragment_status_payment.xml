<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/fragment_status_order_payment_main"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    android:clickable="true"
    android:soundEffectsEnabled="false"
    >

    <ImageView
        android:id="@+id/fragment_status_order_payment_price_back"

        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:clickable="true"

        android:src="@drawable/status_payment_price_back"
        android:scaleType="centerCrop"

        android:layout_marginTop="28dp"

        app:layout_constraintTop_toTopOf="@id/fragment_status_order_payment_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"
        />
    
    <TextView
        android:id="@+id/fragment_status_order_payment_price_new"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textSize="54sp"
        android:textColor="@color/defaultBlack"

        app:layout_constraintTop_toTopOf="@id/fragment_status_order_payment_price_back"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_price_back"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_price_back"
        />

    <View
        android:id="@+id/fragment_status_order_payment_price_separator"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"

        android:background="@color/defaultBackgroundGray"

        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_new"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"
        />

    <TextView
        android:id="@+id/fragment_status_order_payment_price_old"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"

        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="26sp"
        android:textColor="@color/defaultBlack"

        app:layout_constraintTop_toTopOf="@id/fragment_status_order_payment_price_separator"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_price_back"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_price_back"
        />

    <View
        android:id="@+id/fragment_status_order_payment_price_separator2"

        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:background="@color/defaultBackgroundGray"

        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_back"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"/>


    <View
        android:id="@+id/fragment_status_order_payment_price_separator_from"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"

        android:background="@color/defaultBackgroundGray"

        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_separator2"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"
        />

    <View
        android:id="@+id/fragment_status_order_payment_price_separator_to"

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"

        android:background="@color/defaultBackgroundGray"

        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_separator_from"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"
        />

    <TextView
        android:id="@+id/fragment_status_order_payment_from_text_view_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/status_payment_wait_from"
        android:gravity="start"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:textColor="@color/registrationColorHeader2"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_separator2"
        app:layout_constraintBottom_toTopOf="@id/fragment_status_order_payment_price_separator_from"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clearColor"
        app:layout_constraintLeft_toRightOf="@id/fragment_status_order_payment_from_text_view_help"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_separator2"
        app:layout_constraintBottom_toTopOf="@id/fragment_status_order_payment_price_separator_from"
        >
        <TextView
            android:id="@+id/fragment_status_order_payment_from_text_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="@color/defaultBlack"

            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/fragment_status_order_payment_to_text_view_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/status_payment_wait_to"
        android:gravity="start"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:textColor="@color/registrationColorHeader2"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_separator_from"
        app:layout_constraintBottom_toTopOf="@id/fragment_status_order_payment_price_separator_to"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_constraintLeft_toRightOf="@id/fragment_status_order_payment_from_text_view_help"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_status_order_payment_price_separator_from"
        app:layout_constraintBottom_toTopOf="@id/fragment_status_order_payment_price_separator_to"
        >
        <TextView
            android:id="@+id/fragment_status_order_payment_to_text_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="@color/defaultBlack"

            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>




    <TextView
        android:id="@+id/fragment_status_order_payment_header_bottom"

        android:text="@string/status_payment_wait_helpheader"

        android:visibility="invisible"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:textColor="@color/registrationColorHeader2"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="46dp"

        app:layout_constraintBottom_toBottomOf="@id/fragment_status_order_payment_main"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"
        />

    <Button
        android:id="@+id/fragment_status_order_payment_pay_with_card_btn"

        android:text="@string/status_payment_wait_pay_with_card_btn"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:textColor="@color/defaultWhite"

        android:background="@drawable/round_shape_blue_btn"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"

        android:visibility="invisible"

        app:layout_constraintBottom_toTopOf="@id/fragment_status_order_payment_header_bottom"
        app:layout_constraintLeft_toLeftOf="@id/fragment_status_order_payment_main"
        app:layout_constraintRight_toRightOf="@id/fragment_status_order_payment_main"
        />

    <ProgressBar
        android:id="@+id/fragment_status_order_payment_price_progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"


        app:layout_constraintCenterX_toCenterX="@id/fragment_status_order_payment_price_back"
        app:layout_constraintCenterY_toCenterY="@id/fragment_status_order_payment_price_separator"
        />

</android.support.constraint.ConstraintLayout>