<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/right_drawer_main">
    <ListView
        android:id="@+id/right_drawer_list_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:dividerHeight="1dp"
        android:divider="@drawable/default_divider"

        app:layout_constraintTop_toTopOf="@id/right_drawer_main"
        app:layout_constraintLeft_toLeftOf="@id/right_drawer_main"
        app:layout_constraintRight_toRightOf="@id/right_drawer_main"
        >
    </ListView>
</android.support.constraint.ConstraintLayout>
